{
  "header": {
    "scope": "markdown",
    "prefix": "vp-header",
    "body": ["<Header/>"],
    "description": "Add VuePress header component"
  },
  "info": {
    "scope": "markdown",
    "prefix": "vp-info",
    "body": ["::: warning Info", "${1:Add Info}", ":::"],
    "description": "Add VuePress info admonition"
  },
  "tip": {
    "scope": "markdown",
    "prefix": "vp-tip",
    "body": [":::tip Tip", "${1:Add Tip}", ":::"],
    "description": "Add VuePress tip admonition"
  },
  "expand": {
    "scope": "markdown",
    "prefix": "vp-expand",
    "body": [":::details Expand to see the example output", "${1:Add Content}", ":::"],
    "description": "Add VuePress expand admonition"
  },
  "frontmatter": {
    "scope": "markdown",
    "prefix": "vp-frontmatter",
    "body": [
      "---",
      "title: ${1:Add Title}",
      "description: ${2:Add Description}",
      "meta:",
      "  - name: \"og:description\"",
      "    content: ${2:Add Description}",
      "  - name: keywords",
      "    content: ${3:Add keywords}",
      "tags:",
      "  - ${4:Add Tag 1}",
      "  - ${5:Add Tag 2}",
      "  - ${6:Add Tag 3}",
      "---"
    ],
    "description": "Add VuePress default frontmatter"
  },
  "short-header": {
    "prefix": "vp-short-header",
    "body": ["<ShortHeader/>"],
    "description": "Add VuePress short-header component"
  },
  "vp-code-group": {
    "scope": "markdown",
    "prefix": "vp-code-group",
    "body": [
      "<code-group>",
      "<code-block title=\"${1:Block Title}\">",
      "```${2:Code Lang}",
      "${3:Post Here Code Example}",
      "```",
      "</code-block>",
      "",
      "<code-block title=\"${1:Block Title}\">",
      "```${2:Code Lang}",
      "${3:Post Here Code Example}",
      "```",
      "</code-block>",
      "</code-group>"
    ],
    "description": "Add VuePress Code Groups"
  }
}
